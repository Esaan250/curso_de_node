<div class="container">
  <h1>Depósito Bancário</h1>
  <form action="/deposit" method="POST">
    <label for="valor">Valor do Depósito:</label>
    <input
      type="number"
      id="balance"
      name="balance"
      required
      step="0.01"
      min="0.01"
    />
    <button type="submit">Depositar</button>
  </form>
</div>