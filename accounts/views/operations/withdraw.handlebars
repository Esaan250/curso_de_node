<div class="container">
  <h2>Realizar Saque</h2>
  <form action="/withdraw" method="POST" class="form-group">
    <label for="amount">Valor do Saque:</label>
    <input
      type="number"
      id="amount"
      name="amount"
      step="0.01"
      min="0"
      required
      placeholder="Digite o valor"
    />
    <button type="submit" class="withdraw-button">Confirmar Saque</button>
  </form>
</div>