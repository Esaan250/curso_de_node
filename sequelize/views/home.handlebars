<div class="container">
  {{#each users}}
    <div class="item">
      <p>{{this.name}}</p>
      <p>{{this.occupation}}</p>
      <div class="actions">
        <a href="/users/{{this.id}}">Ver Detalhes</a>
        <a href="/users/edit/{{this.id}}">Editar</a>
        <form action="/users/delete/{{this.id}}" method="POST">
          <input type="submit" value="Apagar" class="delete_button" />
        </form>
      </div>
    </div>
  {{/each}}
</div>